<body>
    <div class="dashboard">
        <!-- ==================== SIDEBAR ==================== -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("Index", "Home")" class="sidebar-logo">Hệ thống TOEIC</a>
                <button class="sidebar-close-mobile" id="sidebar-close-mobile">×</button>
            </div>
            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a href="@Url.Action("Index", "Home")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Home") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-dashboard"></use></svg></span>
                            <span class="nav-text">Bảng điều khiển</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Cauhois")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Cauhois") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-bank"></use></svg></span>
                            <span class="nav-text">Ngân hàng câu hỏi</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Phieubaitaponluyens")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Phieubaitaponluyens") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-book-half"></use></svg></span>
                            <span class="nav-text">Ôn luyện TOEIC</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Dethidatao")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Dethidatao") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-pencil-square"></use></svg></span>
                            <span class="nav-text">Đề thi đã tạo</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Sinhviens")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Sinhviens") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-people"></use></svg></span>
                            <span class="nav-text">Sinh viên</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Giaovien")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Giaovien") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-people"></use></svg></span>
                            <span class="nav-text">Giáo viên</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Dangkythithus")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Dangkythithus") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-book-half"></use></svg></span>
                            <span class="nav-text">Đăng ký thi thử</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Diemthi")" class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Diemthi") ? "active" : "")">
                            <span class="nav-icon"><svg><use xlink:href="#icon-book-half"></use></svg></span>
                            <span class="nav-text">Kết quả thi</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="sidebar-footer">
                <button class="sidebar-toggle" id="sidebar-toggle" title="Thu gọn/Mở rộng sidebar">
                    <svg><use xlink:href="#icon-list"></use></svg>
                </button>
            </div>
        </aside>

        <!-- ==================== MAIN CONTENT ==================== -->
        <main class="main-content" id="main-content">
            <button class="sidebar-open-mobile" id="sidebar-open-mobile">☰</button>
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>